<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Seleccion.fragments.ConcursoFragment">


    <ImageView
        android:id="@+id/img_concurso"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_arrow" />

    <TextView
        android:id="@+id/tx_concurso"
        android:layout_width="wrap_content"
        android:fontFamily="@font/rajdhanisemibold"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:text="OLIMPIADA CONCURSOS"
        android:textSize="30sp" />


    <GridView
        android:id="@+id/grid_concurso"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_height="match_parent"
        android:horizontalSpacing="1dp"
        android:verticalSpacing="2dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tx_concurso"

        >

    </GridView>



</RelativeLayout>