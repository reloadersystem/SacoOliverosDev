<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/fr_ciencia1"
        android:layout_width="240dp"
        android:layout_height="217dp">


        <android.support.v7.widget.CardView

            android:layout_width="210dp"
            android:layout_height="169dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp">

            <ImageView
                android:id="@+id/img_tomoDiap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/habitos_estudio_2" />


        </android.support.v7.widget.CardView>

        <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="177dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/sh_menu"

            >

            <TextView
                android:id="@+id/txt_tomoDiapo"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:text="CIENCIAS"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/txt_detatomoDiapo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:text="VER DETALLE"
                android:textSize="8dp" />


        </FrameLayout>


    </FrameLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cir_downloadDiapo"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_cloud_download_black_24dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/fr_ciencia1"
        >


    </de.hdodenhof.circleimageview.CircleImageView>

</RelativeLayout>