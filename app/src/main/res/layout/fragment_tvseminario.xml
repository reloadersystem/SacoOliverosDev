<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeVideoSeminario"
    tools:context=".Secundaria.fragments.fragmentTVSeminario">

    <ImageView
        android:id="@+id/img_backvhs"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="13dp"
        android:src="@drawable/ic_arrow" />



    <TextView
        android:id="@+id/tx_titulovhs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20sp"
        android:text="VIDEO HELICO SEMINARIO"
        android:textSize="30sp"
        android:fontFamily="@font/rajdhanisemibold"
        />


    <GridView
        android:id="@+id/grid_vhseminario"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/tx_titulovhs"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:horizontalSpacing="1dp"
        android:numColumns="2"
        android:verticalSpacing="1dp"

        >

    </GridView>

</RelativeLayout>