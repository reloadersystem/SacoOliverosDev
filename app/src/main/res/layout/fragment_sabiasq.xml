<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relative_noticia"
    tools:context=".Primaria.fragments.fragmentSabiasQ">

    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/conectate"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"

        android:src="@drawable/conectate2"
        android:layout_toRightOf="@+id/conectate2"

        />

    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/conectate2"
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/oliverito"
        android:layout_toRightOf="@+id/dibuconectate"

        />

    <ImageView
        android:id="@+id/dibuconectate"
        android:layout_width="76dp"
        android:layout_height="86dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"

        android:scaleType="centerInside"
        android:src="@drawable/saco"
        android:visibility="gone"

        />

    <ListView
        android:id="@+id/lvNoticia"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/conectate"

        >


    </ListView>
</RelativeLayout>