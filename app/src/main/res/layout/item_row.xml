<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview_id"
    android:layout_width="wrap_content"
    android:layout_height="205dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="20dp"
    android:background="#FFF"
    android:clickable="true"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <EditText
            android:id="@+id/txt_codigodb"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:hint="codigo"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imagendb"
            android:layout_width="220dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/ciencias_1" />

        <EditText
            android:id="@+id/txt_capitulodb"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_below="@+id/txt_codigodb"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:hint="capitulo"
            android:visibility="gone" />

        <EditText
            android:id="@+id/txt_listyoutube"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_below="@+id/txt_codigodb"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:hint="listyoutube"
            android:visibility="gone" />

        <EditText
            android:id="@+id/txt_deshabilitardb"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_alignParentRight="true"
            android:hint="deshabilitado"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/txt_urlpdfdb"
            tools:layout_editor_absoluteX="251dp" />

        <EditText
            android:id="@+id/txt_urlpdfdb"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_below="@id/txt_deshabilitardb"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:hint="url pdf"
            android:visibility="gone" />


        <EditText
            android:id="@+id/txt_ssdpdfdb"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_below="@+id/txt_urlpdfdb"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:hint="ssd pdf"
            android:visibility="gone" />

        <EditText
            android:id="@+id/txt_asiganturadb"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_below="@id/txt_urlpdfdb"
            android:layout_alignParentRight="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:hint="asignatura"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_capitulodb" />
    </android.support.v7.widget.CardView>


    <ImageView
        android:id="@+id/imagepdf"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/adobecolor"
        />

    <ImageView
        android:id="@+id/downloadpdf"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/ic_file_download_red"
        />

    <ImageView
        android:id="@+id/imagevideo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="end|bottom"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/icofinder_video" />


</android.support.v7.widget.CardView>