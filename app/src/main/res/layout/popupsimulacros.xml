<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/sh_transparente"
    android:padding="10dp">


    <LinearLayout
        android:id="@+id/lncerrar"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/btn_cerrar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"

            android:background="@drawable/cerrarmedita" />

    </LinearLayout>


    <android.support.v7.widget.CardView

        android:id="@+id/crd_simulacro_1"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_marginVertical="15dp"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="10dp"
        android:layout_below="@+id/lncerrar"
        app:cardElevation="5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/simulacrodata_1" />




    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/crd_simulacro_3"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:padding="3dp"
        android:layout_below="@+id/crd_simulacro_1"
        android:layout_marginVertical="15dp"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <ImageView
            android:id="@+id/img_ajedrez2app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/simulacrodata_3" />


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/crd_simulacro_2"
        android:layout_gravity="center_horizontal"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_alignParentRight="true"
        android:layout_marginVertical="15dp"
        android:scaleType="centerCrop"
        android:layout_below="@+id/lncerrar"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/whitealpha"
        app:cardElevation="5dp">

        <ImageView
            android:id="@+id/img_ajedrezpdfdata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/simulacrodata_2" />

    </android.support.v7.widget.CardView>


</RelativeLayout>