<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Primaria.fragments.unidadMotFrag">


    <TextView

        android:id="@+id/tx_titlemotivacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HELICO MOTIVACIÃ“N"
        android:layout_marginTop="10dp"
        android:textSize="30dp"
        android:fontFamily="@font/rajdhanisemibold"
        android:layout_marginBottom="20dp"
        />


    <android.support.v7.widget.CardView

        android:id="@+id/fr_unidadMulti"

        android:layout_width="270dp"
        android:layout_height="200dp"
        android:layout_marginVertical="15dp"
        android:background="@color/whiteTransparent"
        android:layout_marginLeft="10dp"
        app:cardCornerRadius="5dp"
        android:layout_below="@+id/tx_titlemotivacion"
        app:cardElevation="5dp">

        <ImageView
            android:id="@+id/img_unidadMulti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"

            android:src="@drawable/helico_motivacion" />


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView

        android:id="@+id/fr_unidadMulti2"

        android:layout_width="270dp"
        android:layout_height="200dp"
        android:layout_marginVertical="15dp"
        android:layout_alignParentRight="true"
        android:background="@color/whiteTransparent"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="5dp"
        android:layout_below="@+id/tx_titlemotivacion"
        app:cardElevation="5dp">

        <ImageView
            android:id="@+id/img_unidadMulti2app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/diapositivas_image" />


    </android.support.v7.widget.CardView>

</RelativeLayout>