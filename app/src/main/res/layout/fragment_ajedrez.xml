<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Primaria.fragments.ajedrezFragment">


    <TextView
        android:id="@+id/tituloajedrez"
        android:layout_centerHorizontal="true"
        android:text="AJEDREZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:fontFamily="@font/rajdhanisemibold"
        />


    <android.support.v7.widget.CardView

        android:id="@+id/crd_repaso"

        android:layout_width="270dp"
        android:layout_height="200dp"
        android:layout_marginVertical="15dp"
        android:background="@color/whiteTransparent"
        android:layout_marginLeft="13dp"
        app:cardCornerRadius="5dp"
        android:layout_below="@+id/tituloajedrez"
        app:cardElevation="5dp">

        <ImageView
            android:id="@+id/img_ajedrez"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"

            android:src="@drawable/ajedrezfondo" />

        <ImageView
            android:id="@+id/img_downajedrez"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="end"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_file_download_black_24dp" />


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cdr_chessOk"
        android:layout_width="270dp"
        android:layout_height="200dp"
        android:layout_below="@+id/crd_repaso"
        android:layout_marginVertical="15dp"
        android:layout_marginLeft="13dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <ImageView
            android:id="@+id/img_ajedrez2app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/chessok_f" />


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView

        android:id="@+id/crd_webchess"

        android:layout_width="270dp"
        android:layout_height="200dp"
        android:layout_below="@id/crd_repaso"
        android:layout_alignParentRight="true"
        android:layout_marginVertical="15dp"
        android:layout_marginRight="15dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <ImageView
            android:id="@+id/img_ajedrez3app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/lichess_f" />


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/crd_ajedrezpdf"

        android:layout_width="270dp"
        android:layout_height="200dp"
        android:layout_alignParentRight="true"
        android:layout_marginVertical="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/tituloajedrez"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <ImageView
            android:id="@+id/img_ajedrezpdfdata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"


            android:src="@drawable/ajedrezfondo_2" />

        <ImageView
            android:id="@+id/img_downajedrez2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="end"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_file_download_black_24dp"/>


    </android.support.v7.widget.CardView>




</RelativeLayout>