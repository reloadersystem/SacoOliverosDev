<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Primaria.fragments.appCalculoFrag">

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/title_calculomental"
        android:text="CÁLCULO  MENTAL"
        android:fontFamily="@font/rajdhanisemibold"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <FrameLayout
        android:id="@+id/fr_calculoapp"
        android:layout_width="280dp"
        android:layout_height="250dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/title_calculomental"

        >


        <android.support.v7.widget.CardView

            android:layout_width="250dp"
            android:layout_height="180dp"
            android:layout_marginLeft="13dp"
            android:layout_marginVertical="15dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp">

            <ImageView
                android:id="@+id/img_calculoapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/soroban" />


        </android.support.v7.widget.CardView>

        <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="bottom"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:background="@drawable/sh_menu"

            >

            <TextView
                android:id="@+id/txt_calculoapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:text="SIMPLE SOROBAN"

                android:textSize="10dp" />


        </FrameLayout>


    </FrameLayout>

    <FrameLayout
        android:id="@+id/fr_calculoapp2"
        android:layout_width="280dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/title_calculomental"
        >


        <android.support.v7.widget.CardView

            android:layout_width="250dp"
            android:layout_height="180dp"
            android:layout_marginLeft="13dp"
            android:layout_marginVertical="15dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp">

            <ImageView
                android:id="@+id/img_calculo2app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/oraculo_matemagico" />


        </android.support.v7.widget.CardView>

        <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="bottom"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:background="@drawable/sh_menu"

            >

            <TextView
                android:id="@+id/txt_calculo3app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:text="ORACULO MATEMÁGICO"
                android:textSize="10dp" />


        </FrameLayout>


    </FrameLayout>

</RelativeLayout>