<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="8dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".Primaria.fragments.cienciaFragment">



    <TextView
        android:id="@+id/id_ciencia"
        android:text="CIENCIA Y AMBIENTE"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:textSize="30dp"
        android:fontFamily="@font/rajdhanisemibold"
        android:layout_height="wrap_content" />


    <android.support.v7.widget.CardView

        android:layout_width="280dp"
        android:layout_height="190dp"
        app:cardCornerRadius="5dp"
        android:id="@+id/fr_ciencia1"
        android:layout_below="@id/id_ciencia"
        app:cardElevation="5dp">

        <ImageView
            android:id="@+id/img_pfmatematica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/ambiente_1" />

        <ImageView
            android:id="@+id/cir_cienciadown"
            android:layout_width="48dp"
            android:layout_height="47dp"
            android:layout_gravity="end"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"

            android:src="@drawable/ic_file_download_black_24dp" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView

        android:layout_width="280dp"
        android:layout_height="190dp"
        app:cardCornerRadius="5dp"
        android:id="@+id/fr_ciencia3"
        android:layout_marginTop="10dp"
        android:layout_below="@id/fr_ciencia1"

        app:cardElevation="5dp">

        <ImageView
            android:id="@+id/img_onelist3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/ambiente_3" />

        <ImageView
            android:id="@+id/cir_cienciadown3"
            android:layout_width="48dp"
            android:layout_height="47dp"
            android:layout_gravity="end"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"

            android:src="@drawable/ic_file_download_black_24dp" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView

        android:layout_width="280dp"
        android:layout_height="190dp"
        app:cardCornerRadius="5dp"
        android:id="@+id/fr_ciencia2"
        android:layout_below="@+id/id_ciencia"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"


        app:cardElevation="5dp">

        <ImageView
            android:id="@+id/img_onelist2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"

            android:src="@drawable/ambiente_2" />

        <ImageView
            android:id="@+id/cir_cienciadown2"
            android:layout_width="48dp"
            android:layout_height="47dp"
            android:layout_gravity="end"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"

            android:src="@drawable/ic_file_download_black_24dp" />

    </android.support.v7.widget.CardView>





</RelativeLayout>