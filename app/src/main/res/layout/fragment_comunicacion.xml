<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="8dp"
    android:id="@+id/id_comunicacion"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".Primaria.fragments.comunicacionFragment">


    <TextView
        android:id="@+id/txt_ciencia"
        android:text="COMUNICACIÃ“N"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/rajdhanisemibold"
        android:textSize="30dp"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.CardView

        android:layout_width="280dp"
        android:layout_height="190dp"
        app:cardCornerRadius="5dp"
        android:id="@+id/frcomun1"
        android:layout_below="@id/txt_ciencia"
        app:cardElevation="5dp">

        <ImageView
            android:id="@+id/img_pfmatematica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/comunicacion_1" />

        <ImageView
            android:id="@+id/cir_download"
            android:layout_width="48dp"
            android:layout_height="47dp"
            android:layout_gravity="end"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"

            android:src="@drawable/ic_file_download_black_24dp" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView

        android:layout_width="280dp"
        android:layout_height="190dp"
        app:cardCornerRadius="5dp"
        android:id="@+id/frcomun3"
        android:layout_marginTop="10dp"
        android:layout_below="@id/frcomun1"

        app:cardElevation="5dp">

        <ImageView
            android:id="@+id/img_onelist3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/comunicacion_3" />

        <ImageView
            android:id="@+id/cir_download3"
            android:layout_width="48dp"
            android:layout_height="47dp"
            android:layout_gravity="end"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"

            android:src="@drawable/ic_file_download_black_24dp" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView

        android:layout_width="280dp"
        android:layout_height="190dp"
        app:cardCornerRadius="5dp"
        android:id="@+id/frcomun2"
        android:layout_below="@+id/txt_ciencia"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"


        app:cardElevation="5dp">

        <ImageView
            android:id="@+id/img_onelist2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"

            android:src="@drawable/comunicacion_2" />

        <ImageView
            android:id="@+id/cir_download2"
            android:layout_width="48dp"
            android:layout_height="47dp"
            android:layout_gravity="end"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"

            android:src="@drawable/ic_file_download_black_24dp" />

    </android.support.v7.widget.CardView>


</RelativeLayout>