<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="2dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <FrameLayout
        android:id="@+id/fr_ciencia1"
        android:layout_width="239dp"
        android:layout_height="209dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:focusable="false">


        <android.support.v7.widget.CardView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="50dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp">

            <ImageView
                android:id="@+id/img_mat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:scaleType="centerCrop"
                android:src="@drawable/habitos_estudio_2" />


        </android.support.v7.widget.CardView>

        <FrameLayout

            android:layout_width="219dp"
            android:layout_height="142dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/sh_menu">

            <TextView
                android:id="@+id/txt_mate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:text="CIENCIAS"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/txt_detallemat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"

                android:layout_marginBottom="10dp"
                android:text="VER DETALLE"
                android:textSize="8dp" />


        </FrameLayout>


    </FrameLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cir_downmat"
        android:layout_width="45dp"
        android:layout_height="47dp"
        android:background="@drawable/download_ico"
        android:layout_toRightOf="@+id/fr_ciencia1"
        android:focusable="false">


    </de.hdodenhof.circleimageview.CircleImageView>
</RelativeLayout>