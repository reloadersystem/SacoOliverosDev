<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_admin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_admin"
    tools:context=".AdminActivity">


    <EditText
        android:id="@+id/edt_restoresystem"
        android:layout_width="300dp"
        android:layout_centerInParent="true"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/sh_menu"
        android:textAlignment="center"
        android:hint="Usuario" />

    <EditText
        android:id="@+id/edt_restorekey"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/edt_restoresystem"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:background="@drawable/sh_menu"
        android:hint="ContraseÃ±a"
        />


    <Button
        android:id="@+id/btn_ingresar"
        android:layout_width="150dp"
        android:layout_height="49dp"
        android:layout_below="@+id/edt_restorekey"
        android:layout_marginTop="70dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="20dp"
        android:layout_centerInParent="true"
        android:background="@drawable/sh_menu"
        android:backgroundTint="@android:color/white"
        android:text="Ingresar"

        />

</RelativeLayout>