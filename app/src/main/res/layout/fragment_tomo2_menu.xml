<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pe.sacooliveros.apptablet.Secundaria.fragments.MotivadorTomosFrag">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1060dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_tomoback2"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_arrow" />

                <TextView
                    android:id="@+id/tx_tomo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="17dp"
                    android:layout_marginEnd="243dp"
                    android:layout_marginRight="20dp"
                    android:text="TOMO II "
                    android:textSize="30sp" />


                <TextView
                    android:id="@+id/tx_tomo3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_tomoback2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:text="CIENCIAS"
                    android:textSize="20sp" />


                <GridView
                    android:id="@+id/ma_cienciasresultados"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tx_tomo3"
                    android:layout_alignParentStart="true"

                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="18dp"
                    android:horizontalSpacing="1dp"
                    android:numColumns="3"
                    android:verticalSpacing="1dp"></GridView>


                <TextView
                    android:id="@+id/tx_tomo4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ma_cienciasresultados"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:text="LETRAS"
                    android:textSize="20sp" />


                    <GridView

                        android:id="@+id/ma_letras"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tx_tomo4"
                        android:layout_marginTop="10dp"
                        android:horizontalSpacing="1dp"
                        android:numColumns="3"
                        android:verticalSpacing="1dp" />


            </RelativeLayout>

        </LinearLayout>

    </ScrollView>
</android.support.constraint.ConstraintLayout>