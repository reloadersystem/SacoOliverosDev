<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="pe.sacooliveros.apptablet.Secundaria.fragments.fragmentEnglish">


    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Helico English"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:fontFamily="@font/rajdhanisemibold"
        />


        <android.support.v7.widget.CardView

            android:id="@+id/crv_englishapp"
            android:layout_width="250dp"
            android:layout_height="180dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/titulo"



            app:cardCornerRadius="5dp"
            app:cardElevation="5dp">

            <ImageView
                android:id="@+id/img_ajedrez"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:scaleType="fitCenter"

                android:src="@drawable/icon_macmillan" />


        </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView

        android:id="@+id/crv_englishapp2"
        android:layout_width="250dp"
        android:layout_height="180dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="5dp"
        android:layout_below="@+id/titulo"
        app:cardElevation="5dp">

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:scaleType="centerInside"
            android:src="@drawable/appsound" />


    </android.support.v7.widget.CardView>





        <android.support.v7.widget.CardView

            android:id="@+id/crv_englishapp3"

            android:layout_width="250dp"
            android:layout_height="180dp"
            android:layout_marginLeft="20dp"

            app:cardCornerRadius="5dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/crv_englishapp"
            app:cardElevation="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mee" />


        </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView

        android:id="@+id/crv_englishapp4"

        android:layout_width="250dp"
        android:layout_height="180dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"

        app:cardCornerRadius="5dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/crv_englishapp"
        app:cardElevation="5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mee2" />


    </android.support.v7.widget.CardView>



</RelativeLayout>
